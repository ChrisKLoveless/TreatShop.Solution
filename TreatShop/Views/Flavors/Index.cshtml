@{
  Layout = "_Layout";
}

<h1>Flavors</h1>

@using TreatShop.Models;

<h3>List of Flavors</h3>

@if (Model.Count == 0)
{
  <h3>No Flavors have been added yet</h3>
}
else
{
  <ul>
  @foreach (Flavor flavor in Model)
  {
    <li>@Html.ActionLink($"{flavor.Name}", "Details", new { id = flavor.FlavorId })</li>
  }
  </ul>
}

<p>@Html.ActionLink("Create a new Flavor", "Create")</p>