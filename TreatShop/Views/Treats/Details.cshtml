@{
	Layout = "_Layout";
}

@model TreatShop.Models.Treat;
@using TreatShop.Models;


<h1>Treat Details</h1>

<h3>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)</h3>

@if (@Model.JoinEntities.Count == 0)
{
	<p>This Treat has no Titles</p>
}
else
{
	<h4>Titles:</h4>
	@foreach (TreatFlavor join in Model.JoinEntities)
	{
		<h3>@join.Flavor.Name</h3>
		@using (Html.BeginForm("DeleteJoin", "Treats"))
		{
			@Html.Hidden("joinId", @join.TreatFlavorId)
			<input type="submit" value="Delete" />
		}
	}
}
<p>@Html.ActionLink("Add a Flavor", "AddFlavor", new { id = Model.TreatId})</p>

<p>@Html.ActionLink("Edit this Treat", "Edit", new { id = Model.TreatId })</p>
<p>@Html.ActionLink("Delete this Treat", "Delete", new { id = Model.TreatId })</p>

